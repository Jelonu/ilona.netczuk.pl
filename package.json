{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "Responsive portfolio website with bilingual support (PL/EN)",
  "scripts": {
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{html,css,js,json,md}\"",
    "format:html": "prettier --write \"**/*.html\"",
    "format:css": "prettier --write \"**/*.css\"",
    "format:js": "prettier --write \"**/*.js\"",
    "start": "node server.js",
    "dev": "python3 -m http.server 8000"
  },
  "keywords": [
    "portfolio",
    "responsive",
    "tailwind",
    "bilingual"
  ],
  "author": "Ilona",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.1.1"
  }
}
